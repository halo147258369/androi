<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_mota">


    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#C07B14"
        android:textSize="26sp"
        android:text="Chi Tiết"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="id"
        android:id="@+id/idmota"></TextView>
    <TextView
        android:textColor="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ntd"
        android:id="@+id/ntdmota"></TextView>
    <TextView
        android:textColor="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dia chi"
        android:id="@+id/diachimota"></TextView>
    <TextView
        android:textColor="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="giá"
        android:id="@+id/giamota"></TextView>
    <TextView
        android:textColor="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="số chỗ"
        android:id="@+id/sochomota"></TextView>

</LinearLayout>